 <%= link_to 'New Client', new_client_path , class: "btn btn-lg btn-warning align-right"%>

<h1 class="page-header"> Clients <small> Listing</small> </h1>

<div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Client Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.name %></td>
            <td><%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_client_path(client) , class: "btn btn-default"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>