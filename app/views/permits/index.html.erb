<%= link_to 'Request Permission', permission_permits_path, class: "btn btn-lg btn-warning align-right" %>
<h1 class="page-header"> Permissions List <small> </small> </h1>

<%= form_tag(permits_path, method: 'get', remote: true, class: "form-inline " ) do %>
  <div class="request form-inline">
    <%= label_tag :request, "Request" %>
    <%= select_tag :request, options_for_select(@requests), prompt: "- Select a Request Type -", class:"form-control search-request" %>
  </div>
  <div class="form-inline">
    <%= label_tag :start, "Start" %>
    <%= text_field_tag :start, date_format(Date.today), class: "form-control search-option datepicker" %>
    <%= label_tag :finish, "Finish" %>
    <%= text_field_tag :finish, date_format(Date.today), class: "form-control search-option datepicker"%>
    <%= submit_tag "Search", id: "search-input-button", class: "btn btn-success" %>
  </div>
<% end %>
<div id="permit-table">
  <%= render "table", permits: @permits %>
</div>

<script type="text/javascript">
  $(".datepicker").datepicker();
</script>