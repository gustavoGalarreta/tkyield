<%= form_for Event.new, url: schedule_events_path(params[:id]), method: :post, remote: true do |f| %>
  <table class="width-table-new">
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name, class:"form-control width-name" %></td>
    </tr>
    <tr>
      <td><%= f.label :start %></td>
      <td><%= f.text_field :inTime, id: 'event_start', class:'clockpicker form-control'%></td>
      <td><%= f.label :finish %></td>
      <td><%= f.text_field :outTime, id: 'event_end', class:'clockpicker form-control' %></td>
    </tr>
    <tr>
      <td><%= f.label :day %></td>
      <td><%= f.select :day_of_week, options_for_select([['Monday', 0], ['Tuesday', 1], ['Wednesday', 2], ['Thursday', 3], ['Friday', 4], ['Saturday', 5], ['Sunday', 6]] ), {prompt:"-- Select day --"},{id:"event_day", class:"form-control"} %></td>
      <td>
        <div class="text-launch">
          <div class="launch-input">
            <%= f.check_box :launch, {}, true, false %>
          </div>
          <td class="launch-status">
            <%= f.label "include launch time?" %>
          </td>
        </div>
      </td>
    </tr>
  </table>
  <%= f.submit "Submit", class: "btn btn-default" %>
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
<% end %>

<script type="text/javascript">
  $('#event_start').clockpicker({
    autoclose: true,
    afterShow: function() {
      $('.popover').css("z-index", "3000");
    }
  })
    $('#event_end').clockpicker({
    autoclose: true,
    afterShow: function() {
      $('.popover').css("z-index", "3000");
    }
  })
</script>