<%= nested_form_for collaborator do |f| %>
  <% if collaborator.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"> &times; </button>
        <h4><%= pluralize(collaborator.errors.count, "error") %> ocurred:</h4>
        <ul>
        <% collaborator.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <div class="input-group">
      <span class="input-group-addon">First Name</span>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <br>
  </div>

  <div class="field">
    <div class="input-group">
      <span class="input-group-addon">Last Name</span>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <br>
  </div>

  <div class="field">
    <div class="input-group">
      <span class="input-group-addon">Email</span>
      <%= f.text_field :work_mail, class: "form-control" %>
    </div>
    <br>
  </div>
  <%# if user.administrator? == false %>
  <div class="input-group">
    <span class="input-group-addon">Role</span>
    <%#= f.select :role_id, roles_helper.collect{ |t| [t.name, t.id]}, {:prompt => "- Select a Role -" } , class: "form-control" %>
  </div>
  <br>
  <%# end %>

  <div class="input-group">
    <span class="input-group-addon">Team</span>
    <div class="row">
      <div class="col-md-8">
        <%= f.select :team_id, @teams.collect{ |t| [t.name, t.id]}, {:prompt => "- Select a Team -" } , class: "form-control" %>
      </div>
      <div id="team-leader-container" class="col-md-4 checkbox">
        <label>
          <%#= f.check_box :team_leader %> Leader?
        </label>
      </div>
    </div>
  </div>
  <br>

  <div class="actions">
    <%= f.submit class: "btn btn-lg btn-warning" %>
  </div>

<% end %>

<script type="text/javascript">
  change_team_load();
</script>